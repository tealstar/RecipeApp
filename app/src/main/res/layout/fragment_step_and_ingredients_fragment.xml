<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UIScreen2Components.StepAndIngredientsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ingredients_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/text_color_text_views"
            android:textSize="14sp"
            tools:text="hello world" />

        <Button
            android:id="@+id/save_to_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimary"
            android:text="@string/save_to_widget_button"
            android:textColor="@color/text_color_button" />

        <ListView
            android:id="@+id/steps_list_view"
            android:layout_width="match_parent"
            android:layout_height="589dp"
            android:layout_margin="8dp"
            android:divider="@color/colorAccent"
            android:dividerHeight="10.0dp"
            android:scrollbars="none"/>

    </LinearLayout>

</ScrollView>